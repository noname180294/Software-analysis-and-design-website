<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/projectProposalFragment">

    <!-- Màn hình Home -->
    <fragment
        android:id="@+id/projectProposalFragment"
        android:name="com.example.itplatform_ver1.ProjectProposalFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Màn hình Membership -->
    <fragment
        android:id="@+id/membershipFragment"
        android:name="com.example.itplatform_ver1.MembershipFragment"
        android:label="Membership"
        tools:layout="@layout/fragment_membership" />

    <!-- Màn hình Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.itplatform_ver1.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Màn hình Chat -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.itplatform_ver1.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <!-- Thêm action chuyển đổi giữa các màn hình -->
    <action
        android:id="@+id/action_homeFragment_to_membershipFragment"
        app:destination="@id/membershipFragment" />

    <action
        android:id="@+id/action_homeFragment_to_chatFragment"
        app:destination="@id/chatFragment" />
</navigation>
